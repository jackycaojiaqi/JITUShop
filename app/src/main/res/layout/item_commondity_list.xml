<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">

    <com.github.lguipeng.library.animcheckbox.AnimCheckBox
        android:id="@+id/cb_commondity"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:visibility="gone"
        app:checked="false"
        app:circle_color="@color/main_color"
        app:stroke_color="@color/gray_c"
        app:stroke_width="2dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:paddingLeft="5dp"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/iv_commondity_list_pic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_no_pic" />

        <TextView
            android:id="@+id/tv_commondity_list_good_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            android:maxLines="2"
            android:text="cncnaklsnaksscadsncnaklsnaksscadsncnaklsnaksscads"
            android:textColor="@color/black_3a3a3a"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/tv_commondity_list_goods_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="50dp"
            android:text="¥ 19"
            android:textColor="@color/gray_deep"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="70dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_commondity_list_goods_num"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:lines="2"
                android:text="货号：B8121211211212"
                android:textColor="@color/gray_deep"
                android:textSize="8dp" />

            <TextView
                android:id="@+id/tv_commondity_list_warehouse_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="库存：7000"
                android:textColor="@color/gray_deep"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/tv_commondity_list_sale_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="销量：98"
                android:textColor="@color/gray_deep"
                android:textSize="10dp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>