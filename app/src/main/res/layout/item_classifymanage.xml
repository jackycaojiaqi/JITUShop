<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView android:id="@+id/tv_classsifi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="空调清洗"
            android:textColor="@color/black_3a3a3a"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/iv_classsify_list_edit"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@drawable/ic_commodity_celledit" />

        <ImageView
            android:id="@+id/iv_classsify_list_down"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="35dp"
            android:padding="5dp"
            android:src="@drawable/ic_commodity_celldown" />

        <ImageView
            android:id="@+id/iv_classsify_list_up"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="70dp"
            android:padding="5dp"
            android:src="@drawable/ic_commodity_cellup" />
    </RelativeLayout>
</LinearLayout>