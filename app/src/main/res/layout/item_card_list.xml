<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center"
    android:orientation="horizontal">

    <com.vondear.rxtools.view.RxTextAutoZoom
        android:id="@+id/tv_card_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text=" ****** 1643"
        android:textColor="@color/black_3a3a3a"
        android:textSize="14dp" />

    <com.github.lguipeng.library.animcheckbox.AnimCheckBox
        android:id="@+id/cb_card"
        android:layout_width="25dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="70dp"
        app:checked="false"
        app:circle_color="@color/main_color"
        app:stroke_color="@color/gray_c"
        app:stroke_width="2dp" />

</LinearLayout>