<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_dan"
    android:orientation="vertical">

    <include layout="@layout/common_head" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/white"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="6dp"
            android:text="提现到"
            android:textColor="@color/black_3a3a3a"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:text="微信零钱"
            android:textColor="@color/blue_1b99d1"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp"
            android:text="支付宝"
            android:textColor="@color/blue_1b99d1"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="78dp"
            android:text="银行卡"
            android:textColor="@color/blue_1b99d1"
            android:textSize="14dp" />

        <com.github.lguipeng.library.animcheckbox.AnimCheckBox
            android:id="@+id/cb_weichat"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70dp"
            app:checked="true"
            app:circle_color="@color/main_color"
            app:stroke_color="@color/gray_c"
            app:stroke_width="2dp" />

        <com.github.lguipeng.library.animcheckbox.AnimCheckBox
            android:id="@+id/cb_zhifubao"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70dp"
            android:layout_marginTop="35dp"
            app:checked="false"
            app:circle_color="@color/main_color"
            app:stroke_color="@color/gray_c"
            app:stroke_width="2dp" />

        <com.github.lguipeng.library.animcheckbox.AnimCheckBox
            android:id="@+id/cb_yinhangka"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70dp"
            android:layout_marginTop="75dp"
            app:checked="false"
            app:circle_color="@color/main_color"
            app:stroke_color="@color/gray_c"
            app:stroke_width="2dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/gray_c" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="金额（元）"
            android:textColor="@color/black_3a3a3a" />

        <com.jitu.shop.widget.ClearableEditText
            android:id="@+id/et_getcash_money"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="70dp"
            android:background="@null"
            android:gravity="center"
            android:hint="当前金额0元"
            android:inputType="number"
            android:textColor="@color/main_color"
            android:textSize="14dp" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="1、银行卡：48小时内到账,节假日顺延"
        android:textSize="12dp" />

    <Button
        android:id="@+id/btn_getcash_sure"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:background="@drawable/shap_rec_10dp_main_color"
        android:text="确定"
        android:textColor="@color/white" />
</LinearLayout>